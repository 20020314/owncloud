<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>latin1</charset>
	<table>
		<name>*dbprefix*mail</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<autoincrement>1</autoincrement>
				<default>0</default>
				<notnull>true</notnull>
				<length>5</length>
			</field>
			<field>
				<name>ocUser</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>4096</length>
			</field>
			<field>
				<name>mailUser</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>4096</length>
			</field>
			<field>
				<name>mailPass</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>4096</length>
			</field>
			
			<index>
				<name>id</name>
				<unique>true</unique>
				<field>
					<name>id</name>
					<sorting>descending</sorting>
				</field>
			</index>
		</declaration>
	</table>
</database>
			